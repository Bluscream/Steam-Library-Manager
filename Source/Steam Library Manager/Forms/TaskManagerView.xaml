                            <TextBlock Text="{Binding TargetLibrary.DirectoryInfo.FullName, StringFormat=Target: \{0\}}" TextWrapping="Wrap" />
                            <TextBlock Text="  |  "/>
                            <TextBlock Text="{Binding OriginApp.PrettyGameSize}" />
