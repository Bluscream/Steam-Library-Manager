                        <!-- Checkboxes -->
                        <WrapPanel Margin="55,0,0,0">
                            <CheckBox Content="{l:Static p:Resources.Forms_TaskManager_ReportFileMovement}" IsChecked="{Binding ReportFileMovement}" />
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Style.Triggers>
